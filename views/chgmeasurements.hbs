<section class="section-form">
  <div class="row">
      <h2>Change Measurement Data</h2>
  </div>
  <div class="row">
      <form action="/chgmeasurements" method="POST">
          <input type="hidden" name="id" value="{{id}}">
          <input type="hidden" name="trainee_id" value="{{results.[0].trainee_id}}">
          <div class="row">
            <div class="col span-1-of-6">
                <label for="name"><strong>Name</strong></label>
            </div>
            <div class="col span-1-of-6">
                <strong>{{results.[0].name}}</strong>
            </div>
          </div>
          <br>
          <div class="row">
              <div class="col span-1-of-6">
                  <label for="date">Date</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="date" name="date" id="date" value="{{results.[0].measure_date}}" required>
              </div>
              <div class="col span-1-of-6">
                  <label for="age">Age</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="1" step="1" name="age" id="age">
              </div>
          </div>
          <div class="row">
              <div class="col span-1-of-6">
                  <label for="name">Height</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" max="8" step="1" name="feet" id="feet" value="{{results.[0].height_ft}}">
              </div>
              <div class="col span-1-of-6">
                  <label for="date">Ft.</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" max="12" step="1" name="inches" id="inches" value="{{results.[0].height_in}}">
              </div>
              <div class="col span-1-of-6">
                  <label for="age">in.</label>
              </div>
          </div>
          <br>
          <div class="row">
              <h3>Weight</h3>
          </div>
          <div class="row">
              <div class="col span-1-of-6">
                  <label for="currweight">Current Weight</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" step=".1" name="currweight" id="currweight" value="{{results.[0].weight}}">
              </div>
              <div class="col span-1-of-6">
                  <label for="date">Goal Weight</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" step=".1" name="goalweight" id="goalweight">
              </div>
              <div class="col span-1-of-6">
                  <label for="age">Difference</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" step=".1" name="weightdiff" id="weightdiff">
              </div>
          </div>
          <br>
          <br>
          <div class="row">
              <h3>Caliper Measurements</h3>
          </div>
          <div class="row">
              <div class="col span-1-of-6">
                  <label for="calchest">Chest</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" step="1" name="calchest" id="calchest" value="{{results.[0].caliper_chest}}">
              </div>
              <div class="col span-1-of-6">
                  <label for="calsuprillac">Suprillac</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" step="1" name="calsuprillac" id="calsuprillac" value="{{results.[0].caliper_suprillac}}">
              </div>
              <div class="col span-1-of-6">
                  <label for="calbicep">Bicep</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" step="1" name="calbicep" id="calbicep" value="{{results.[0].caliper_bicep}}">
              </div>
          </div>
          <div class="row">
              <div class="col span-1-of-6">
                  <label for="calsubscap">Subscap</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" step="1" name="calsubscap" id="calsubscap" value="{{results.[0].caliper_subscap}}">
              </div>
              <div class="col span-1-of-6">
                  <label for="calthigh">Thigh</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" step="1" name="calthigh" id="calthigh" value="{{results.[0].caliper_thigh}}">
              </div>
              <div class="col span-1-of-6">
                  <label for="calcalf">Calf</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" step="1" name="calcalf" id="calcalf" value="{{results.[0].caliper_calf}}">
              </div>
          </div>
          <div class="row">
              <div class="col span-1-of-6">
                  <label for="calabdomen">Abdomen</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" step="1" name="calabdomen" id="calabdomen" value="{{results.[0].caliper_abd}}">
              </div>
              <div class="col span-1-of-6">
                  <label for="callowerback">Lower Back</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" step="1" name="callowerback" id="callowerback" value="{{results.[0].caliper_lowback}}">
              </div>
              <div class="col span-1-of-6">
                  <label for="caltricep">Tricep</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" step="1" name="caltricep" id="caltricep" value="{{results.[0].caliper_tricep}}">
              </div>
          </div>
          <br>
          <br>
          <div class="row">
              <h3>Girth Measurements</h3>
          </div>
          <div class="row">
              <div class="col span-1-of-6">
                  <label for="girthshoulders">Shoulders</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" name="girthshoulders" id="girthshoulders" value="{{results.[0].girth_shoulders}}">
              </div>
              <div class="col span-1-of-6">
                  <label for="girthchest">Chest</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" name="girthchest" id="girthchest" value="{{results.[0].girth_chest}}">
              </div>
          </div>
          <div class="row">
              <div class="col span-1-of-6">
                  <label for="girthwaist">Waist</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" name="girthwaist" id="girthwaist" value="{{results.[0].girth_waist}}">
              </div>
              <div class="col span-1-of-6">
                  <label for="girthhips">Hips</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" name="girthhips" id="girthhips" value="{{results.[0].girth_hips}}">
              </div>
          </div>
          <div class="row">
              <div class="col span-1-of-6">
                  <label for="girthlbicep">Left Bicep</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" name="girthlbicep" id="girthlbicep" value="{{results.[0].girth_bicep_l}}">
              </div>
              <div class="col span-1-of-6">
                  <label for="girthrbicep">Right Bicep</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" name="girthrbicep" id="girthrbicep" value="{{results.[0].girth_bicep_r}}">
              </div>
          </div>
          <div class="row">
              <div class="col span-1-of-6">
                  <label for="girthlthigh">Left Thigh</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" name="girthlthigh" id="girthlthigh" value="{{results.[0].girth_thigh_l}}">
              </div>
              <div class="col span-1-of-6">
                  <label for="girthrthigh">Right Thigh</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" name="girthrthigh" id="girthrthigh" value="{{results.[0].girth_thigh_r}}">
              </div>
          </div>
          <div class="row">
              <div class="col span-1-of-6">
                  <label for="girthlcalf">Left Calf</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" name="girthlcalf" id="girthlcalf" value="{{results.[0].girth_calf_l}}">
              </div>
              <div class="col span-1-of-6">
                  <label for="girthrcalf">Right Calf</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" name="girthrcalf" id="girthrcalf" value="{{results.[0].girth_calf_r}}">
              </div>
          </div>
          <br>
          <br>
          <div class="row">
              <h3>Lean Mass</h3>
          </div>
          <div class="row">
              <div class="col span-1-of-6">
                  <label for="bodyfatpct">Body Fat %</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" name="bodyfatpct" id="bodyfatpct" value="{{results.[0].body_fat_pct}}">
              </div>
              <div class="col span-1-of-6">
                  <label for="fatlbs">Fat Lbs</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" name="fatlbs" id="fatlbs" value="{{results.[0].fat_lbs}}">
              </div>
              <div class="col span-1-of-6">
                  <label for="leanmass">Lean Mass</label>
              </div>
              <div class="col span-1-of-6">
                  <input type="number" min="0" name="leanmass" id="leanmass" value="{{results.[0].lean_mass}}">
              </div>
          </div>
          <br>
          <div class="row">
              <input class="btn btn-full" type="submit" value="Submit">
          </div>
      </form>
  </div>
</section>
