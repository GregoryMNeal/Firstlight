<section class="section-login">
  <div class="row">
      <h2>Sign in</h2>
  </div>
  <form action="/login" method="POST">
    <b>Username</b>
    <br>
    <br>
    <input type="text" name="username" placeholder="Email address" value="{{uname}}" required><br><br>
    <b>Password</b>
    <br>
    <br>
    <input type="password" name="password" placeholder="Enter Password" required><br><br>
    <input class="btn btn-login" type="submit" value="Log in">
    <br>
    <br>
  </form>
  <form action="/create_acct" method="GET">
    <input class="btn btn-full" type="submit" value="Create Account">
  </form>
  {{#if errmsg}}
    <br>
    <b>{{errmsg}} Please try again.</b>
  {{/if}}
</section>
